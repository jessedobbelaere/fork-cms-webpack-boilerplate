{% set isWebpackDevServer = app.request.headers.get('X-Webpack-Dev-Server') == "true" %}
{% set subdomain = app.request.getHttpHost()|split('.')|first %}

<!DOCTYPE html>
<html lang="{{ LANGUAGE }}">
<head>
    {# Meta #}
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="cleartype" content="on">
    <meta name="generator" content="Fork CMS"/>
    {{ meta|raw }}
    {{ metaCustom|raw }}

    <title>{{ pageTitle }}</title>

    {# Mobile settings http://t.co/dKP3o1e #}
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Stylesheets #}
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700&display=swap" rel="stylesheet">
    {% if not isWebpackDevServer %}
        <link rel="stylesheet" type="text/css" href="{{ asset('app.css') }}">
    {% endif %}

    {# Humans.txt #}
    <link type="text/plain" rel="author" href="/humans.txt">

    {# Favicon #}

    {# Site wide HTML #}
    {{ siteHTMLHeader|raw }}

    {# Scripts #}
    {% if not isWebpackDevServer %}
        <script data-cfasync="true" defer src="{{ asset('vendor.js') }}"></script>
    {% endif %}
    <script data-cfasync="true" defer src="{{ asset('app.js') }}"></script>
</head>
