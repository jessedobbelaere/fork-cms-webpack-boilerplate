{
  "name": "fork-cms-webpack-boilerplate",
  "version": "2.0.0",
  "description": "Opiniated Fork CMS theme boilerplate with Tailwind, React, ESNext, Post-CSS and Hot Module Replacement support using Webpack 4",
  "repository": {
    "type": "git",
    "url": "git@github.com:jessedobbelaere/fork-cms-webpack-boilerplate.git"
  },
  "main": "Core/Js/app.ts",
  "scripts": {
    "build": "npm run build:prod",
    "build:dev": "webpack --env.mode=development",
    "build:prod": "webpack --env.mode=production",
    "start:dev": "webpack-dev-server --env.mode=development --hot",
    "watch": "npm run start:dev",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,md,json}'",
    "prettier-check": "prettier --list-different '**/*.{js,jsx,ts,tsx,css,scss,md,json}'",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --fix Core/Js/*"
  },
  "dependencies": {
    "core-js": "3.6.4",
    "quicklink": "2.0.0-alpha",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "turbolinks": "5.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "7.9.0",
    "@hot-loader/react-dom": "16.13.0",
    "@testing-library/react": "10.0.2",
    "@types/jest": "25.2.1",
    "@types/packery": "1.4.31",
    "@types/react": "16.9.44",
    "@types/react-dom": "16.9.6",
    "@types/turbolinks": "5.2.0",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.26.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "25.2.6",
    "babel-loader": "8.1.0",
    "chokidar": "3.3.1",
    "clean-css": "4.2.3",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "3.5.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "6.0.0",
    "glob-all": "3.2.1",
    "imagemin": "7.0.1",
    "imagemin-mozjpeg": "8.0.0",
    "imagemin-optipng": "7.1.0",
    "imagemin-svgo": "7.1.0",
    "img-loader": "3.0.1",
    "jest": "25.2.7",
    "jest-cli": "25.2.7",
    "mini-css-extract-plugin": "0.9.0",
    "postcss-clean": "1.1.0",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-nested": "4.2.1",
    "postcss-preset-env": "6.7.0",
    "postcss-simple-vars": "5.0.2",
    "prettier": "2.0.4",
    "raw-loader": "4.0.0",
    "react-hot-loader": "4.12.20",
    "react-test-renderer": "16.13.1",
    "size-plugin": "2.0.1",
    "source-map-loader": "0.2.4",
    "style-loader": "1.1.3",
    "tailwindcss": "1.2.0",
    "terser-webpack-plugin": "2.3.5",
    "ts-jest": "25.3.1",
    "typescript": "3.8.3",
    "url-loader": "4.0.0",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-manifest-plugin": "2.2.0",
    "webpack-merge": "4.2.2",
    "@fullhuman/postcss-purgecss": "github:fullhuman/postcss-purgecss"
  }
}
