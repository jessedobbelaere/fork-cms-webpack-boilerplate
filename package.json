{
  "name": "fork-cms-webpack-boilerplate",
  "version": "2.0.0",
  "description": "Opiniated Fork CMS theme boilerplate with Tailwind, React, ESNext, Post-CSS and Hot Module Replacement support using Webpack 4",
  "repository": {
    "type": "git",
    "url": "git@github.com:jessedobbelaere/fork-cms-webpack-boilerplate.git"
  },
  "main": "Core/Js/app.ts",
  "scripts": {
    "build": "npm run build:prod",
    "build:dev": "NODE_ENV=development webpack --mode=development --env NODE_ENV=development",
    "build:prod": "NODE_ENV=production webpack --mode=production --env NODE_ENV=production",
    "start": "webpack serve --mode=development",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,md,json}'",
    "prettier-check": "prettier --list-different '**/*.{js,jsx,ts,tsx,css,scss,md,json}'",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --fix Core/Js/*"
  },
  "dependencies": {
    "core-js": "3.16.0",
    "quicklink": "2.2.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "turbolinks": "5.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.14.8",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "7.14.8",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@hot-loader/react-dom": "17.0.1",
    "@testing-library/react": "12.0.0",
    "@types/jest": "26.0.24",
    "@types/react": "17.0.15",
    "@types/react-dom": "17.0.9",
    "@types/turbolinks": "5.2.0",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "babel-loader": "8.2.2",
    "chokidar": "3.5.2",
    "clean-webpack-plugin": "3.0.0",
    "compression-webpack-plugin": "8.0.1",
    "css-loader": "6.2.0",
    "css-minimizer-webpack-plugin": "3.0.2",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "img-optimize-loader": "1.0.7",
    "jest": "26.6.3",
    "jest-cli": "27.0.6",
    "mini-css-extract-plugin": "2.1.0",
    "postcss": "8.3.6",
    "postcss-import": "14.0.2",
    "postcss-loader": "6.1.1",
    "postcss-nested": "5.0.6",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.3.2",
    "react-hot-loader": "4.13.0",
    "react-test-renderer": "17.0.1",
    "size-plugin": "3.0.0",
    "source-map-loader": "3.0.0",
    "style-loader": "3.2.1",
    "tailwindcss": "2.2.7",
    "ts-jest": "26.5.6",
    "typescript": "4.3.5",
    "url-loader": "4.1.1",
    "webpack": "5.47.0",
    "webpack-cli": "4.7.2",
    "webpack-dev-server": "3.11.2",
    "webpack-manifest-plugin": "4.0.1",
    "webpack-merge": "5.8.0"
  }
}
